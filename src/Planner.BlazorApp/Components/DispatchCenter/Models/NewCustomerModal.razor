@inherits LayoutComponentBase

@using Microsoft.AspNetCore.Components.Forms
@using Planner.BlazorApp.FormModels
@using Planner.BlazorApp.Services

<div class="modal fade @(isVisible ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.4)">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title">New Customer</h5>
                <button type="button" class="btn-close btn-close-white" @onclick="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="@newCustomer" OnValidSubmit="Save">
                    <div class="mb-2">
                        <label class="form-label">Name</label>
                        <InputText @bind-Value="newCustomer.Name" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Addres</label>
                        <InputText @bind-Value="newCustomer.Address" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col">
                            <label class="form-label">Latitude</label>
                            <div class="form-control border bg-light">@newCustomer.Latitude.ToString("F6")</div>
                        </div>
                        <div class="col">
                            <label class="form-label">Longitude</label>
                            <div class="form-control border bg-light">@newCustomer.Longitude.ToString("F6")</div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <label class="form-label">Default Job Type</label>
                        <select class="form-select" @bind="newCustomer.DefaultJobType">
                            <option value="1">Delivery</option>
                            <option value="2">Pickup</option>
                        </select>
                    </div>

                    <div class="mt-3 text-end">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary ms-2" @onclick="Close">Cancel</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isVisible;
    private CustomerFormModel newCustomer = new();

    [Parameter] public EventCallback<CustomerFormModel> OnCustomerCreated { get; set; }

    public void Open(MapPosition args) {
        newCustomer = new CustomerFormModel {
            Name = args.Label,
            LocationId = 0,
            Latitude = args.Lat,
            Longitude = args.Lng,
            Address = args.Address,
            DefaultServiceMinutes = 30,
            RequiresRefrigeration = false,
            DefaultJobType = 1 // Assuming delivery
        };
        // Mark as dirty so it gets saved
        newCustomer.IsDirty = true;
        isVisible = true;
        StateHasChanged();
    }

    private async Task Save() {
        // persist to service or emit event
        if (OnCustomerCreated.HasDelegate)
        {
            await OnCustomerCreated.InvokeAsync(newCustomer);
        }

        isVisible = false;
        StateHasChanged();
    }

    private void Close() {
        isVisible = false;
        StateHasChanged();
    }
}
