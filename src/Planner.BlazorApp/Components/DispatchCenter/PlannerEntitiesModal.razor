@inherits LayoutComponentBase
@using Planner.Application.Messaging
@using Planner.BlazorApp.Services
@using Planner.Domain

@inject DataCenterState DataCenter
@inject IConfiguration configuration

<div>

    <!-- MAIN ENTITY MODAL -->
    <div class="modal fade @((IsVisible && !IsWaiting) ? "show d-block" : "")" tabindex="-1">
        <div class="modal-dialog modal-xl modal-dialog-centered">

            <div class="modal-content planner-modal-light">

                <!-- HEADER -->
                <div class="modal-header planner-modal-header-light">
                    <h5 class="modal-title fw-semibold">Assign Jobs to Fleet</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body planner-modal-body-light">

                    <!-- TABS -->
                    <ul class="nav nav-tabs planner-tabs-light">
                        <li class="nav-item">
                            <a class="nav-link @(ActiveTab == "Vehicles" ? "active" : "")"
                               @onclick=@(() => SetTab("Vehicles"))>Vehicles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ActiveTab == "Customers" ? "active" : "")"
                               @onclick=@(() => SetTab("Customers"))>Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ActiveTab == "Jobs" ? "active" : "")"
                               @onclick=@(() => SetTab("Jobs"))>Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ActiveTab == "Routes" ? "active" : "")"
                               @onclick=@(() => SetTab("Routes"))>Routes</a>
                        </li>
                    </ul>

                    <div class="planner-modal-content-area">
                        @if (ActiveTab == "Customers") {
                            <CustomersTab Customers="@DataCenter.Customers" />
                        } else if (ActiveTab == "Vehicles") {
                            <VehiclesTab Vehicles="@DataCenter.Vehicles" />
                        } else if (ActiveTab == "Jobs") {
                            <JobsTab Jobs="@DataCenter.Jobs"
                                        Customers="@DataCenter.Customers"
                                        Vehicles="@DataCenter.Vehicles"
                                        OnSolve="@DataCenter.SolveVrp" />
                        } else if (ActiveTab == "Routes") {
                            <RoutesTab Routes="@DataCenter.Routes" />
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- WAITING / OPTIMIZATION MODAL -->
    <div class="modal fade @(IsWaiting ? "show d-block" : "")"
         tabindex="-1" style="background:rgba(0,0,0,0.4)">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content text-center p-3 shadow-sm">
                <div class="modal-header">
                    <h5 class="modal-title">Please wait for about @remainingMinutes minute(s).</h5>
                </div>
                <div class="modal-body">
                    <p class="text-muted">@waitingMessage</p>
                    <div class="spinner-border text-primary mt-2"></div>
                </div>

            </div>
        </div>
    </div>

</div>


@code {
    private bool IsVisible { get; set; }
    private bool IsWaiting { get; set; }
    private string ActiveTab { get; set; } = "Customers";

    private string waitingMessage = "We're now generating an optimized set of delivery routes for your fleet.\n\n"
    + "This process sends your job and vehicle data to our routing engine, where advanced algorithms evaluate constraints, calculate travel times, and determine the most efficient plan.\n\n"
    + "You'll see the updated routes as soon as the optimization completes.";

    private double remainingMinutes;
    private System.Timers.Timer? waitTimer;

    public void OpenTab(string tab) {
        if (IsWaiting) {
            // If optimization is running, show the waiting modal instead
            IsVisible = false;
            StateHasChanged();
            return;
        }

        ActiveTab = tab;
        IsVisible = true;
        StateHasChanged();
    }

    private void SetTab(string tab) {
        ActiveTab = tab;
    }

    private void Close() {
        IsVisible = false;
    }

    public void StartOptimizationWait(double estimatedMinutes = 2) {
        IsVisible = false;

        IsWaiting = true;
        remainingMinutes = estimatedMinutes;

        waitTimer?.Dispose();
        waitTimer = new System.Timers.Timer(60000); // every minute
        waitTimer.Elapsed += (_, _) => {
            remainingMinutes -= 1;
            if (remainingMinutes <= 0) {
                EndOptimizationWait();
            }
            InvokeAsync(StateHasChanged);
        };
        waitTimer.Start();
    }

    public void EndOptimizationWait() {
        waitTimer?.Stop();
        waitTimer?.Dispose();
        IsWaiting = false;
        remainingMinutes = 0;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            DataCenter.CollectionChanged += async msg => {
                EndOptimizationWait();
                ActiveTab = "Routes";
                // IsVisible = true;
                IsVisible = false;
                await InvokeAsync(StateHasChanged);
            };

            DataCenter.StartWait += async waitingMinutes => {
                StartOptimizationWait(waitingMinutes);
                await InvokeAsync(StateHasChanged);
            };
        }
    }
}
