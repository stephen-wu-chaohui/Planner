@using Planner.Contracts.Messages.VehicleRoutingProblem
@using Microsoft.AspNetCore.Components.Web


<div class="p-2">
    <h5>📍 Jobs</h5>
    <button class="btn btn-sm btn-primary mb-2" @onclick="AddNew">+ Add Job</button>

    <table class="table table-sm table-bordered align-middle">
        <thead>
            <tr>
                <th>Label</th>
                <th>Type</th>
                <th>Lat</th>
                <th>Lng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Items) {
                <tr>
                    <td>@job.Label</td>
                    <td>@job.JobType</td>
                    <td>@job.Lat.ToString("F5")</td>
                    <td>@job.Lng.ToString("F5")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => Edit(job)">Edit</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => Delete(job)">🗑️</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (editing is not null) {
        <div class="modal fade show d-block" tabindex="-1" style="background-color:rgba(0,0,0,.4);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@((isNew ? "Add" : "Edit") + " Job")</h5>
                        <button type="button" class="btn-close" @onclick="CloseModal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-2">
                            <label>Label</label>
                            <input class="form-control" @bind="editing.Label" />
                        </div>
                        <div class="mb-2">
                            <label>Type</label>
                            <select class="form-select" @bind="editing.JobType">
                                <option>Depot</option>
                                <option>Pickup</option>
                                <option>Delivery</option>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label>Lat</label>
                                <input class="form-control" type="number" step="0.00001" @bind="editing.Lat" />
                            </div>
                            <div class="col">
                                <label>Lng</label>
                                <input class="form-control" type="number" step="0.00001" @bind="editing.Lng" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                        <button class="btn btn-primary" @onclick="Save">Save</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public List<MapMarker> Items { get; set; } = new();
    [Parameter] public EventCallback<List<MapMarker>> OnItemsChanged { get; set; }

    private MapMarker? editing;
    private bool isNew;

    private void AddNew() {
        editing = new MapMarker();
        isNew = true;
    }

    private void Edit(MapMarker item) {
        editing = new MapMarker {
            Label = item.Label,
            JobType = item.JobType,
            Lat = item.Lat,
            Lng = item.Lng
        };
        isNew = false;
    }

    private async Task Save() {
        if (editing is null) return;
        if (isNew)
            Items.Add(editing);
        else {
            var existing = Items.FirstOrDefault(j => j.Label == editing.Label);
            if (existing is not null) {
                existing.JobType = editing.JobType;
                existing.Lat = editing.Lat;
                existing.Lng = editing.Lng;
            }
        }
        editing = null;
        await OnItemsChanged.InvokeAsync(Items);
    }

    private async Task Delete(MapMarker item) {
        Items.Remove(item);
        await OnItemsChanged.InvokeAsync(Items);
    }

    private void CloseModal() => editing = null;
}
