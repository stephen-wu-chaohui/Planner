  </ItemGroup>

  <ItemGroup>
    <Content Remove="..\Planner.API\appsettings*.json" />
    <Content Remove="..\Planner.Optimization.Worker\appsettings*.json" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

</Project>
